{
    "manifest_version": 2,

    "name": "dnd_tracker",
    "description": "This extension provides a webapp which helps to keep track of all your Dungeons and Dragons data.",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "images/dragonEggIcon.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "https://ajax.googleapis.com/"
    ]
}
